<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tbToolbar_public"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/backgroud_fragment_home"
    app:contentInsetStart="0dp"
    app:popupTheme="@style/AppTheme.PopupOverlay">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/to_leftscreen_horizontal_margin"
        android:layout_gravity="left"
        android:visibility="gone"
        android:id="@+id/toolBarLeftLl">

        <ImageView
            android:id="@+id/leftIv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@mipmap/back" />

        <TextView
            android:id="@+id/leftTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="返回"
            android:textColor="@color/white"
            android:textSize="@dimen/common_text_size" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvTitle_public"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="番茄休息中..."
        android:textColor="@color/white"
        android:textSize="@dimen/common_text_size" />

    <ImageView
        android:id="@+id/rightIv"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:src="@drawable/ic_menu_share"
        android:visibility="gone" />
</android.support.v7.widget.Toolbar>
