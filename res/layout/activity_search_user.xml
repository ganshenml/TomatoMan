<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroud_default_color"
    android:orientation="vertical"
    tools:context="com.example.ganshenml.tomatoman.act.SearchUserAct">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tbSearchUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/toobar_backgroud_default_color">

        <SearchView
            android:id="@+id/svSearchFriends"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:iconifiedByDefault="false"
            android:queryHint="搜索"></SearchView>
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/rlSearchUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_marginTop="@dimen/to_item_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin">

        <ImageView
            android:id="@+id/ivSearchIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/logo_person" />

        <TextView
            android:id="@+id/tvSearchContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/to_leftscreen_horizontal_margin"
            android:layout_toRightOf="@+id/ivSearchIcon"
            android:textColor="#000000"
            android:text="搜索：sssssssssssssss"
            />

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/to_item_vertical_margin"
        android:src="@drawable/divider"
        android:visibility="invisible"
        android:id="@+id/ivSearchUserDivider"/>
</LinearLayout>
