<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rlLogin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:divider="@drawable/divider"
    android:orientation="vertical"
    tools:context="com.example.ganshenml.tomatoman.act.LoginAct">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/backgroud_fragment_home"
        app:contentInsetStart="0dp"
        android:id="@+id/passwordTb">


        <ImageView
            android:id="@+id/backIv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="@dimen/to_leftscreen_horizontal_margin"
            android:src="@mipmap/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="密码找回"
            android:textColor="@color/white"
            android:textSize="@dimen/common_text_size" />
    </android.support.v7.widget.Toolbar>

    <TextView
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/to_leftscreen_horizontal_margin"
        android:layout_marginRight="@dimen/to_leftscreen_horizontal_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请提供信息：" />
    <TextView
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/to_leftscreen_horizontal_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1.用户名"
        android:textColor="@color/color_warn"/>

    <TextView
        android:layout_marginTop="@dimen/to_leftscreen_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/to_leftscreen_horizontal_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2.最近三次的番茄任务名称和时间"
        android:textColor="@color/color_warn"/>

    <TextView
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/to_leftscreen_horizontal_margin"
        android:layout_marginRight="@dimen/to_leftscreen_horizontal_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发送至以下邮箱供人工校验：" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/to_leftscreen_horizontal_margin"
            android:layout_marginRight="@dimen/to_leftscreen_horizontal_margin"
            android:textColor="@color/backgroud_fragment_home"
            android:textSize="@dimen/common_text_size"
            android:text="tomatoman_vip@sina.com"
            android:id="@+id/emailTv"/>

    <Button
        android:id="@+id/copyEmailBtn"
        android:paddingLeft="@dimen/to_leftscreen_horizontal_margin"
        android:paddingRight="@dimen/to_leftscreen_horizontal_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:background="@drawable/login_button_style"
        android:text="复制邮箱地址"
        android:textAlignment="center"
        android:textColor="#FFFFFF" />


    <TextView
        android:layout_marginTop="@dimen/activity_vertical_large_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/dark_gray"
        android:text="(人工校验需要一定的时间，一般情况下三日内您便可收到回复)" />

</LinearLayout>

