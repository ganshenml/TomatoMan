<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.ganshenml.tomatoman.act.MyTomatoAct">

    <android.support.v7.widget.Toolbar
        android:id="@+id/myTomatoTb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/backgroud_fragment_home"
        app:contentInsetStart="0dp">

        <ImageView
            android:id="@+id/backIv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="@dimen/to_leftscreen_horizontal_margin"
            android:src="@mipmap/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="我的番茄"
            android:textColor="@color/white"
            android:textSize="@dimen/common_text_size" />

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:id="@+id/myTomatoSv"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:showDividers="middle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/ivMyTomato"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/tomato" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tomatoNumTv"
                        android:layout_gravity="center_horizontal"
                        android:drawableRight="@mipmap/arrow_top"
                        android:text="333个"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/tomatoTimeTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:text="( 333小时 )" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/gray"></LinearLayout>

            <com.example.ganshenml.tomatoman.view.SimpleListView
                android:id="@+id/myTomatoRecordLv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_weight="1"
                android:scrollbars="none" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
