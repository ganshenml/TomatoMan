<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rlLogin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:divider="@drawable/divider"
    android:orientation="vertical"
    tools:context="com.example.ganshenml.tomatoman.act.LoginAct">

    <android.support.v7.widget.Toolbar
        android:id="@+id/updatePassTb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/backgroud_fragment_home"
        app:contentInsetStart="0dp">

        <ImageView
            android:id="@+id/backIv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="@dimen/to_leftscreen_horizontal_margin"
            android:src="@mipmap/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="修改密码"
            android:textColor="@color/white"
            android:textSize="@dimen/common_text_size" />
    </android.support.v7.widget.Toolbar>



    <com.example.ganshenml.tomatoman.view.ClearEditTextView
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:id="@+id/ctPasswordOld"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/to_leftscreen_horizontal_margin"
        android:layout_marginRight="@dimen/to_leftscreen_horizontal_margin"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:drawableLeft="@mipmap/password_blue"
        android:drawablePadding="7dp"
        android:hint="老密码"
        android:inputType="textPassword"
        android:maxLength="15"
        android:textAlignment="gravity"
        android:textColorHint="@color/dark_gray"
        android:textCursorDrawable="@drawable/text_cursor" />

    <com.example.ganshenml.tomatoman.view.ClearEditTextView
        android:id="@+id/ctPasswordNew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/to_leftscreen_horizontal_margin"
        android:layout_marginRight="@dimen/to_leftscreen_horizontal_margin"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:drawableLeft="@mipmap/password_blue"
        android:drawablePadding="7dp"
        android:hint="新密码"
        android:inputType="textPassword"
        android:maxLength="15"
        android:textAlignment="gravity"
        android:textColorHint="@color/dark_gray"
        android:textCursorDrawable="@drawable/text_cursor" />

    <com.example.ganshenml.tomatoman.view.ClearEditTextView
        android:id="@+id/ctVerifyPasswordAgain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/to_leftscreen_horizontal_margin"
        android:layout_marginRight="@dimen/to_leftscreen_horizontal_margin"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:drawableLeft="@mipmap/password_blue"
        android:drawablePadding="7dp"
        android:hint="确认新密码"
        android:inputType="textPassword"
        android:maxLength="15"
        android:textAlignment="gravity"
        android:textColorHint="@color/dark_gray"
        android:textCursorDrawable="@drawable/text_cursor" />

    <Button
        android:id="@+id/updatePassBtn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:background="@drawable/login_button_style"
        android:text="确认修改"
        android:textAlignment="center"
        android:textColor="#FFFFFF" />
</LinearLayout>

