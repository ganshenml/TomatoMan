<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ivUserImageItem"
        android:layout_marginBottom="@dimen/to_item_vertical_margin"
        android:layout_marginTop="@dimen/to_item_vertical_margin"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/logo_person" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/to_item_vertical_margin"
        android:layout_marginTop="@dimen/to_item_vertical_margin"
        android:layout_marginLeft="@dimen/to_leftscreen_horizontal_margin"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="用户名"
            android:textSize="@dimen/common_text_size"
            android:id="@+id/tvUserNameItem"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:gravity="center"
            android:text="这里是简介内容"
            android:textSize="@dimen/little_text_size"
            android:id="@+id/tvUserIntroductionItem"/>

    </LinearLayout>

</LinearLayout>