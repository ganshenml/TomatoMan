<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tomato_temporary_background"
    android:orientation="vertical"
    tools:context="com.example.ganshenml.tomatoman.act.TomatoTemporaryAct">

    <include
        layout="@layout/toolbar_tomato_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/activity_vertical_large_margin"
        android:orientation="vertical">
        <!-- 获得的番茄 -->
        <LinearLayout
            android:id="@+id/obtainedTomatoLl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

        </LinearLayout>

        <Button
            android:id="@+id/startRestBtn"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/activity_vertical_large_margin"
            android:background="@drawable/green_stroke_button_style"
            android:drawableRight="@mipmap/arrow_green"
            android:paddingRight="70dp"
            android:text="开始休息"
            android:textColor="@color/lighter_green"
            android:textStyle="bold" />

        <Button
            android:id="@+id/completeTaskBtn"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/activity_vertical_large_margin"
            android:background="@drawable/blue_stroke_button_style"
            android:drawableRight="@mipmap/arrow_blue"
            android:paddingRight="20dp"
            android:text="完成任务"
            android:textColor="@color/button_unpressed_color"
            android:textStyle="bold" />

        <Button
            android:id="@+id/efficiencyZoneBtn"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/activity_vertical_large_margin"
            android:background="@drawable/yellow_stroke_button_style"
            android:drawableRight="@mipmap/arrow_yellow"
            android:paddingRight="20dp"
            android:text="进入高效时间领域"
            android:textColor="@color/yellow"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>